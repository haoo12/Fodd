<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="11dp"
        android:id="@+id/lrow">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/add_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:fontFamily="@font/amethysta"
                android:textSize="20sp"
                android:text="Product Name"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/product_price"
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:fontFamily="@font/amethysta"
                android:textSize="20sp"
                android:text="Price"
                android:textStyle="italic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/update_pro"
                    android:backgroundTint="@color/blueish"
                    android:background="@drawable/baseline_drive_file_rename_outline_24"/>

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/delete_pro"
                    android:backgroundTint="@color/blue"
                    android:background="@drawable/baseline_delete_forever_24"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
